<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범명"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IU 5th Album 'LILAC'"
        android:textSize="12sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/album_title_tv"
        app:layout_constraintTop_toTopOf="@id/album_title_tv" />

    <TextView
        android:id="@+id/album_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아티스트"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/album_title_tv"
        app:layout_constraintStart_toStartOf="@id/album_title_tv" />

    <TextView
        android:id="@+id/album_artist_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/album_content_tv"
        app:layout_constraintStart_toStartOf="@id/album_content_tv" />

    <TextView
        android:id="@+id/album_distributor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유통사"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/album_artist_tv"
        app:layout_constraintStart_toStartOf="@id/album_artist_tv" />

    <TextView
        android:id="@+id/album_distributor_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오엔터테인먼트"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/album_artist_name_tv"
        app:layout_constraintStart_toStartOf="@id/album_artist_name_tv" />

    <TextView
        android:id="@+id/album_agency_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기획사"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/album_distributor_tv"
        app:layout_constraintStart_toStartOf="@id/album_distributor_tv" />

    <TextView
        android:id="@+id/album_agency_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDAM엔터테인먼트"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/album_distributor_name_tv"
        app:layout_constraintStart_toStartOf="@id/album_distributor_name_tv" />

    <TextView
        android:id="@+id/album_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범소개"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/album_agency_tv"
        app:layout_constraintTop_toBottomOf="@id/album_agency_tv" />

    <TextView
        android:id="@+id/album_info_content_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'아이유(IU)' 정규 5집 [LILAC]"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/album_info_title_tv"
        app:layout_constraintTop_toBottomOf="@id/album_info_title_tv" />

    <TextView
        android:id="@+id/album_info_content_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'안녕 꽃잎 같은 안녕'\n'내 맘에 아무 의문이 없어 난 이 다음으로 가요'"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/album_info_content_01_tv"
        app:layout_constraintTop_toBottomOf="@id/album_info_content_01_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>